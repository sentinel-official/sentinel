<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Text Theme -->
    <style name="CustomTextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/bangla_sangam_mn</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Toolbar Themes -->
    <style name="CustomTextAppearance.Toolbar">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/margin_18</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text Themes -->
    <style name="CustomTextAppearance.AppTitle">
        <item name="android:textSize">@dimen/text_36</item>
    </style>

    <style name="CustomTextAppearance.Text10">
        <item name="android:textSize">@dimen/text_10</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTextAppearance.Text12">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTextAppearance.Text14">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTextAppearance.Text18">
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <style name="CustomTextAppearance.Text24">
        <item name="android:textSize">@dimen/text_24</item>
    </style>

    <style name="CustomTextAppearance.Text32">
        <item name="android:textSize">@dimen/text_32</item>
    </style>

    <style name="CustomTextAppearance.Text10.Gray">
        <item name="android:textColor">@color/colorTextGray</item>
    </style>

    <style name="CustomTextAppearance.Text12.WhiteNormal">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomTextAppearance.Text12.White50Normal">
        <item name="android:textColor">@color/colorTextWhiteWithAlpha50</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomTextAppearance.Text12.White70">
        <item name="android:textColor">@color/colorTextWhiteWithAlpha70</item>
    </style>

    <style name="CustomTextAppearance.Text12.Black">
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="CustomTextAppearance.Text12.BlackNormal">
        <item name="android:textColor">@color/colorWindowDark</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomTextAppearance.Text12.BlueNormal">
        <item name="android:textColor">@color/colorTextBlue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomTextAppearance.Text12.GrayNormal">
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomTextAppearance.Text12.OrangeNormal">
        <item name="android:textColor">@color/colorButtonOrange</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomTextAppearance.Text14.Orange">
        <item name="android:textColor">@color/colorButtonOrange</item>
    </style>

    <style name="CustomTextAppearance.Text14.White70Normal">
        <item name="android:textColor">@color/colorTextWhiteWithAlpha70</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Navigation Drawer Item Theme -->
    <style name="DrawerItemTheme">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:fontFamily">@font/bangla_sangam_mn</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item><!-- item size in menu-->
        <item name="listPreferredItemHeightSmall">40dp</item><!-- item size in menu-->
    </style>

    <!-- TextInputLayout And TextInputEditText Theme -->
    <style name="TextInputLayoutTheme" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorButtonOrange</item>
        <item name="android:textSize">@dimen/text_10</item>
        <item name="android:fontFamily">@font/bangla_sangam_mn</item>
    </style>

    <style name="TextInputEditTextTheme">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
    </style>

    <!-- EditText Themes -->
    <style name="CustomTextAppearance.PinEditText">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:digits">1234567890</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:maxLength">4</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_20</item>
    </style>

    <!-- Button Themes -->
    <style name="CustomTextAppearance.OrangeButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/selector_button_text_white</item>
        <item name="android:paddingRight">@dimen/margin_16</item>
        <item name="android:paddingLeft">@dimen/margin_16</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:background">@drawable/shape_button_orange</item>
    </style>

    <style name="CustomTextAppearance.BlueButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/selector_button_text_white</item>
        <item name="android:paddingRight">@dimen/margin_16</item>
        <item name="android:paddingLeft">@dimen/margin_16</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:background">@drawable/shape_button_blue</item>
    </style>

    <style name="CustomTextAppearance.BlackButton">
        <item name="android:textSize">@dimen/text_10</item>
        <item name="android:minHeight">@dimen/margin_32</item>
        <item name="android:textColor">@color/colorButtonOrange</item>
        <item name="android:background">@drawable/shape_button_black</item>
    </style>


    <style name="CustomTextAppearance.TransparentOrangeButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorButtonOrange</item>
        <item name="android:paddingRight">@dimen/margin_16</item>
        <item name="android:paddingLeft">@dimen/margin_16</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!-- RadioButton Theme -->
    <style name="CustomTextAppearance.AgreeRadioButton">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:paddingLeft">@dimen/margin_8</item>
        <item name="android:paddingRight">@dimen/margin_8</item>
        <item name="android:button">@drawable/selector_agree_radio_button</item>
    </style>
</resources>