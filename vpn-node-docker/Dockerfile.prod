FROM alpine:3.6

ADD sentinel /root/sentinel

ADD app.py server.py /root/

ENV SENT_ENV=PROD

RUN echo '@testing http://nl.alpinelinux.org/alpine/edge/testing' >> /etc/apk/repositories && \
    apk add --no-cache ca-certificates easy-rsa mongodb openvpn ufw@testing wget && \
    apk add --no-cache gcc musl-dev nano python-dev redis && \
    wget -c https://bootstrap.pypa.io/get-pip.py -O /tmp/get-pip.py && \
    python /tmp/get-pip.py && pip install --no-cache-dir requests speedtest_cli falcon redis gunicorn getip2 pychalk==1.0.2 pymongo && \
    rm -rf /tmp/* /var/tmp/* /var/cache/apk/* /var/cache/distfiles/* /root/.cache .wget-hsts

EXPOSE 1194/udp 3000

CMD ["python", "/root/app.py"]
